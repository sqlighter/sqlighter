{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "jest (single)",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/app",
      "command": "npm test sqlite.test.ts -t 'getTree'",
      "sourceMaps": true
    },
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/app",
      "command": "yarn run dev",
      "sourceMaps": true
    },
    {
      "name": "Next.js: debug client-side",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${webRoot}/*"
      }
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/app",
      "command": "yarn run dev",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      },
      "sourceMaps": true
    }
  ]
}
